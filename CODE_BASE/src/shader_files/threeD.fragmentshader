#version 430 core

in vec2 uv_location;
in vec3 fragment_color;

layout(location = 2) uniform sampler2D texture_sampler;
layout(location = 3) uniform float using_texture;

out vec3 color;
void main() {
	// TODO: switch back to here when have bmp loading done
	// color = mix(fragment_color, fragment_color * texture(texture_sampler, uv_location).rgb, using_texture);
	color = vec3(uv_location.x, uv_location.y, 0);
}